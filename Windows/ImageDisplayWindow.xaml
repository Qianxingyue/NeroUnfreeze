<Window x:Class="NeroUnfreeze.Windows.ImageDisplayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NeroUnfreeze Display" 
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent"
        Topmost="False"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Width="300" Height="300">
    <Canvas>
        <Image x:Name="CharacterImage" Stretch="Uniform"/>
        <Image x:Name="IceImage" Stretch="Uniform"/>
    </Canvas>
</Window>

